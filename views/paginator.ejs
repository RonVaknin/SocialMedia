<%if (paginator.totalPages > 1){%>

    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center pagination-sm">
            <% let i = 1,
            j = paginator.totalPages,
            gap = 4
            %>
            
            <% if (paginator.currentPage > 1) { %>

                <li class="page-item">
                    <a class="page-link" 
                        href="<%=paginator.geturl(paginator.currentPage - 1)%>" 
                        aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                    <span class="sr-only">Previous</span>
                    </a>
                </li>

                <% if (paginator.currentPage > gap) {
                    i = paginator.currentPage -gap%>
                    
                    <li class="page-item active">
                        <a class="page-link" href="<%=paginator.geturl(1)%>"
                            tabindex="-1" aria-disabled="true">
                            1 
                        </a>
                    </li>
                    <li class="page-item disabled">
                        <a class="page-link" href="#" tabindex="-1" aria-disabled="true">
                            ... 
                        </a>
                    </li>
                <% } %>
                
                

            <% } %>
            
            <%for (i ; (i <= paginator.totalPages) && ( i <= (paginator.currentPage + gap)) ; ++i){%>
                <li class="page-item active" aria-current="page">
                    <%if (i != paginator.currentPage) {%>
                        <a class="page-link" href="<%=paginator.geturl(i)%>">
                        <%= i %>  <span class="sr-only">(current)</span></a>
                    <%} else {%>
                        <li class="page-item disabled">
                            <a class="page-link" href="#" tabindex="-1" aria-disabled="true">
                                <%= i %> 
                            </a>
                        </li>
                    <% } %>  
                </li>
            <% } %>

            <% if (paginator.currentPage + gap < paginator.totalPages) {%>
                <li class="page-item disabled">
                    <a class="page-link" href="#" tabindex="-1" aria-disabled="true">
                        ... 
                    </a>
                </li>
                <li class="page-item active">
                    <a class="page-link" href="<%=paginator.geturl(paginator.totalPages)%>"
                        tabindex="-1" aria-disabled="true">
                        <%=paginator.totalPages%> 
                    </a>
                </li>
            <%}%>

            <% if (paginator.currentPage < paginator.totalPages) { %>

                <li class="page-item">
                    <a class="page-link" 
                        href="<%=paginator.geturl(paginator.currentPage + 1)%>" 
                        aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                    <span class="sr-only">Next</span>
                    </a>
                </li>
            <%}%>
        </ul>
    </nav>
<% } %>