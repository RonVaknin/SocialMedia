
<div class="container mt-4 ">
    <div class="row ">
		<div class="col-md-3 ml-2 mr-2">
            <div class="sticky-top ">
                <div class="card profile-header">
                    <div class="media">
                        <%if(userview.image){%>
                            <a class="thumbnail pull-left" href="/users/<%=userview._id%>/img">
                                <img class="profile-img float-md-right rounded"
                                src="/users/<%=userview._id%>/img">
                            </a>
                        <%}%>
                        <div class="media-body ml-2">
                            <h4 class="media-heading"><%= userview.username %></h4>
                            <p>
                                <span class="label label-info"><%= userview.fname || "" %> </span> 
                                <span class="label label-info"><%= userview.sname || "" %></span>
                            </p>
                            <p>
                                <p>
                                    <span class="label label-info"><%= count.posts || "0" %> posts </span> 
                                    <span class="label label-warning"><%= count.comments|| "0" %> comments</span>
                                </p>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-7 justify-content-center">
            <%posts.forEach(function(post){%>
                <div class="row">
                    <div class="card mb-5 ">
                        <% if(post.image){ %>
                        <img class="card-img-top" src="/<%=post.id %>/img" alt="post image" 
                            onclick="location.href='/<%=post.id %>/img'"/>
                        <% } %>
                        <div class="card-body">
                            <h5 class="card-title" onclick="location.href='users/<%= post.author.username %>/user'"> 
                                <%=post.author.username%>
                            </h5>
                            <p class="card-text" onclick="location.href='/post/<%= post.id %>'"><%=post.content%></p>
                        </div>
                    </div>
                </div>
            <%})%>
    
        </div>
    </div>
</div>
<div class="container  mx-auto d-flex justify-content-center col-7 ">
        


</div>
<%-include("../paginator",{paginator})%>


